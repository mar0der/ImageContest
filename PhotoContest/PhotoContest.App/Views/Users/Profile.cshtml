@model PhotoContest.App.Models.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "Profile";
}
<h2>Profile</h2>
<div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Username</span>
    <input type="text" class="form-control" disabled value="@Model.Username" aria-describedby="basic-addon1">
</div><br/>
<div class="input-group">
    <span class="input-group-addon" id="basic-addon1">Email</span>
    <input type="text" class="form-control" disabled value="@Model.Email" aria-describedby="basic-addon1">
</div>
<h4>Own contests</h4>
@if (Model.OwnContests.Count() > 0)
{
    foreach (var contest in Model.OwnContests)
    {
        <p>@contest.Title - @contest.Status</p>
    }
}
else
{
    <p>No own contests.</p>
}
<h4>Judge in contests</h4>
@if (Model.JudgeContests.Count() > 0)
{
    foreach (var contest in Model.JudgeContests)
    {
        <p>@contest.Title - @contest.Status</p>
    }
}
else
{
    <p>No contests.</p>
}
@if (this.User.Identity.Name == Model.Username)
{
    <button type="button" class="btn btn-default btn-lg">
        Edit
    </button>
}
@model PhotoContest.App.Models.Photos.Users.EditProfileModel
@{
    ViewBag.Title = "Edit";
    var rewardGenderArray = Enum.GetValues(typeof(PhotoContest.Models.Enumerations.Gender));
    var rewardGender = new System.Web.Mvc.SelectList(rewardGenderArray);
}
<h2 class="text-right">Edit Profile</h2>
<hr>
@Html.AntiForgeryToken()
@using (Html.BeginForm("Edit", "Users", new { @class = "form-horizontal" }))
{
     @Html.ValidationSummary(null, new { @class = "alert" });
     <div class="col-md-6">
        <div class="text-center">
            <div class="profilePhotoContainer">
                <img src="@Model.PhotoLink" alt="avatar">
            </div>
            @Html.ActionLink("Change Profile image", "All", "Photos")
        </div>
    </div>

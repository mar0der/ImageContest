@model System.Collections.Generic.IEnumerable<PhotoContest.Models.Models.Photo>
    @{
        ViewBag.Title = "ViewAll";
    }
    <h2>User photos</h2>
    <div class="allPhotos">
        @foreach (var photo in Model)
        {
            <div class="image">
                <a href="@Url.Action("ViewAll", "Photos", new { id = photo.Id, userId = ViewData["id"]})">
                    <div>@photo.Title</div>
                    <img src="@photo.PhotoLink" alt="@photo.Title" />
                </a>
                @Html.ActionLink("Delete", "Delete", "Photos", new { id = photo.Id, userId = ViewData["id"] }, new { @class = "btn btn-danger confirmDelete" })
                @Html.ActionLink("Edit", "Edit", "Photos", new { id = photo.Id, userId = ViewData["id"] }, new { @class = "btn btn-success" })
            </div>
        }

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/main")
    }
